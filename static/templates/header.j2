<script>
function hrefChange(tag, number, route) {
  document.getElementsByTagName(tag)[number].addEventListener("click", () => {
    window.location.href = route;
  });
}

let userid = {{user['id']}}
hrefChange("a", 0, `/charlist/${userid}`)
hrefChange("a", 1, `/newchar/${userid}`)
hrefChange("a", 2, "/logout")
</script>